{
  "name": "p-init",
  "publisher": "asoupper",
  "displayName": "P_Init",
  "description": "Colors __init__.py files dark grey in the Explorer",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "colors": [
      {
        "id": "pinit.decorations.initFileEmpty",
        "description": "Color used to render empty __init__.py Explorer entries.",
        "defaults": {
          "dark": "#70707099",
          "light": "#70707099",
          "highContrast": "#70707099"
        }
      },
      {
        "id": "pinit.decorations.initFile",
        "description": "Color used to render non-empty __init__.py Explorer entries.",
        "defaults": {
          "dark": "#FFFFFF99",
          "light": "#FFFFFF99",
          "highContrast": "#FFFFFF99"
        }
      }
    ],
    "configuration": {
      "type": "object",
      "title": "P_Init",
      "properties": {
        "p-init.emptyInitFileColor": {
          "type": "string",
          "default": "#70707099",
          "description": "Color used for empty __init__.py decorations. Accepts a theme token (e.g. list.highlightForeground) or a hex value (e.g. #FF4081)."
        },
        "p-init.nonEmptyInitFileColor": {
          "type": "string",
          "default": "#FFFFFF99",
          "description": "Color used for non-empty __init__.py decorations. Accepts a theme token or a hex value."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
